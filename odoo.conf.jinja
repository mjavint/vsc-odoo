[options]
; Configuración básica
addons_path = /path/odoo/addons
admin_passwd = {{ odoo_admin_password }}

csv_internal_sep = ,
data_dir = /Users/mjavint/Workspaces/Odoo/data
; pg_path =
; logfile = /var/log/odoo/odoo.log
; log_level = debug

; Configuración de servidor
http_port = 8069
gevent-port = 8072
; proxy_mode = True
; workers = 0

; Configuración de base de datos
db_host = False
db_port = False
db_name = False
db_user = {{ db_user }}
